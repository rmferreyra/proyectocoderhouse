<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="/static/css/style.css" type="text/css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/normalize.css@8.0.1/normalize.css" type="text/css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" type="text/css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/uikit@3.11.1/dist/css/uikit.min.css" type="text/css">
    {{#if style}}
        <link rel="stylesheet" href="/static/css/{{style}}.css" type="text/css">
    {{/if}}
  </head>
  <body>
    <div class="uk-container uk-width-1-1 uk-padding-remove uk-margin-remove">
        <nav id="navbar" class="uk-navbar-container" uk-navbar>
            <div class="uk-navbar-left">
                <ul class="uk-navbar-nav">
                    <li class="uk-active">
                        <a href="/">Home</a>
                    </li>
                    <li class="uk-active">
                        <a href="/realtimeproducts">Products in Real Time</a>
                    </li>
                    {{#if user.isPublic}}
                    <li class="uk-active">
                        <a href="/chatmessage">Chat</a>
                    </li>
                    <li class="uk-active">
                        <a href="/carts/{{ idCart }}">Carrito de Compras</a>
                    </li>
                    {{/if}}
                    {{#if user.isPremium}}
                    <li class="uk-active">
                        <a href="/chatmessage">Chat</a>
                    </li>
                    <li class="uk-active">
                        <a href="/carts/{{ idCart }}">Carrito de Compras</a>
                    </li>
                    {{/if}}

                    {{#if user}}
                    <li>
                        <a style="color: black;">Bienvenido, {{user.first_name}}!</a>
                        <div class="uk-navbar-dropdown uk-border-rounded">
                        <ul class="uk-nav uk-navbar-dropdown-nav">
                            <li>
                            <a href="/profile">Perfil</a>
                            </li>
                            {{#if user.isAdmin}}
                            <li>
                                <a href="/admin/admin">Admin - Agregar Producto</a>
                            </li>
                            <li>
                                <a href="/admin/editarProducto">Admin - Editar Producto</a>
                            </li>
                            <li>
                                <a href="/admin/getUser">Admin - Buscar Usuario</a>
                            </li>
                            {{/if}}
                            {{#if user.isPremium}}
                            <li>
                                <a href="/admin/admin">Premium - Agregar Producto</a>
                            </li>
                            <li>
                                <a href="/premium/deletePremium">Premium - Eliminar Producto Premium</a>
                            </li>
                            {{/if}}
                            <li>
                            <a href="/logout">Logout</a>
                            </li>
                        </ul>
                        </div>
                    </li>
                    {{else}}
                    <li>
                        <a href="/login" style="color: black;">Inicia Sesion</a>
                    </li>    
                    {{/if}}
                </ul>
            </div>
        </nav>
        <div class="uk-width-1-1 uk-margin-remove uk-align-center uk-text-break uk-padding" id="page-background">
            <h2 id="page-title">{{ title }}</h2>
            <div class="img">
                <img src="static/img/super.jpg" width="200px" class="img"></img>
            </div>
            <h3 id="page-title" class="user">Bienvenido a la Tienda Online: {{ user.first_name }}</h3>
            {{{body}}}
        </div>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/static/js/index.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/uikit@3.11.1/dist/js/uikit.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/uikit@3.11.1/dist/js/uikit-icons.min.js"></script>
  </body>
</html>